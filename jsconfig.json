{
  "compilerOptions": {
    "target": "es2020",
    "module": "es6",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./src/",
    "paths": {
      "@core/*": [
        "./core/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
